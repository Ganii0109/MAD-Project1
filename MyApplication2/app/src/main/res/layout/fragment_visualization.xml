<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".VisualizationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.anychart.AnyChartView
            android:id="@+id/chart_sleep_hours"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true" />

        <com.anychart.AnyChartView
            android:id="@+id/chart_exercise_hours"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/chart_sleep_hours"
            android:layout_marginTop="16dp" />

        <com.anychart.AnyChartView
            android:id="@+id/chart_sleep_quality"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/chart_exercise_hours"
            android:layout_marginTop="16dp" />

        <com.anychart.AnyChartView
            android:id="@+id/chart_weight"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/chart_sleep_quality"
            android:layout_marginTop="16dp" />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>